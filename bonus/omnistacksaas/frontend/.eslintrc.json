{
  "parser": "babel-eslint",
  "env": {
    "es2021": true,
    "browser": true,
    "jest": true
  },
  "extends": [
    "plugin:react/recommended",
    "prettier",
    "standard",
    "jsx-a11y",
    "import"
  ],
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "react/jsx-filename-extension": ["error", { "extensions": [".js", ".jsx"] }],
    "import/prefer-default-export": "off"
  }
}
